Q1.Consecutive 1's count in an array. //			24-04-2024
	Input--->int arr[]={1,0,1,1,0,0,0,1,1,1};
	
	Output---> 3 [7,8,9]

#include<iostream>
#include<bits/stdc++.h>
using namespace std;

	void consecutive_ones(int arr[],int n){
		int count=0;
		int maxi=INT_MIN; 
		
		for(int i=0;i<n;i++){
			if(arr[i]==1){
				count++;
				cout<<count<<endl;
			}
			else{
				count=0;
			}
			maxi=max(maxi,count);
		}
		cout<<"Consecutive ones "<<maxi;
	}
	int main(){
		int arr[]={1,0,1,1,0,0,0,1,1,1};
		consecutive_ones(arr,10);
		return 0;
	}


Q2.Second largest element in an array.			//25-04-2024

	/*Input---->int []arr={5,4,2,1,3};
	Output---->4(Second largest element)*/
	
	#include<iostream>
	using namespace std;
	
	

	int secondLargest(int arr[],int n){
    	    int largest=arr[0];
            int slargest=-1;
        	
		for(int i=0;i<n;i++){
			if(arr[i]>largest){
			    slargest=largest;
			    largest=arr[i];	
			}

			else if(arr[i]<largest && arr[i]>slargest){
				slargest=arr[i];
				
			}
		}
		return slargest;
		
	}

	int main(){
		int n;
		cin>>n;
		int arr[n];
		
		for(int i=0;i<n;i++){
			cin>>arr[i];
		}
		
		int ans = secondLargest(arr,n);
		cout<<"Second largest element in an array is "<<ans;
		
		return 0;
	}

